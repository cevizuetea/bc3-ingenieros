{% extends 'base_admin.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

<!--DIV CONTENDO-->
        
<div id="content-wrapper">
    <div class="container-fluid">
		<!-- contenido -->
        <div id="content-wrapper">
			<div class="container-fluid">
                <center>
                <div class="row"
                <div class="container text-center col-lg-6 col-centrada">
					<div class="container-fluid" style="height: 25px">
							 {% for flash_message in app.session.flashbag.get('notice') %}
							 	<div class="alert alert-success" id="mensaje">
									<!--<div class="flash-notice">-->
			        						{{ flash_message }}
			    					<!--</div>-->
			    				</div>
							{% endfor %}						
					</div>
				</div>
				</div>
				</center>

 				<button onclick="location.href='/herramienta/new'" class=" boton_tabla float-right"><i class="fa fa-plus-circle" aria-hidden="true"></i> &nbsp;Nuevo</button>            
 				<spam class="titulo">HERRAMIENTAS</spam>
                <hr>

                <!-- DataTables -->
                <div class="card mb-3">
                  	<div class="card-body">
                    	<div class="table-responsive">
                    	{% if herramientas %}
                      		<table class="table table-bordered" id="datos" width="100%" cellspacing="0">
		                        <thead>
		                          <tr class="card-header">
		                            <th>Código</th>
		                            <th>Nombre</th>
		                            <th>Descripción</th>
		                            <th>Disponibilidad</th>
		                            <th>Opciones</th>
		                          </tr>
		                        </thead>
		                        <tfoot>
		                          <tr>
		                            <th>Código</th>
		                            <th>Nombre</th>
		                            <th>Descripción</th>
		                            <th>Disponibilidad</th>
		                            <th>Opciones</th>
		                          </tr>
		                        </tfoot>
                        		<tbody>    
                        		{% for herramienta in herramientas %}                    
			                        <tr>
			                         	<td>{{ herramienta.codigo}}</td>
			                            <td>{{ herramienta.nombreherramienta }} </td>
			                            <td>{{ herramienta.descripcionherramienta }}</td>
			                            <td>{% if herramienta.ocupado == 0 %}
			                            		Disponible
				                            {% else %}
				                            	Ocupado
				                            {% endif %}
			                            </td>
			                            <td>
				                            <center>	
				                            <a href="/herramienta/show/{{ herramienta.id }}"  class="icono_tabla "  ><i class="fa fa-eye" aria-hidden="true"></i></a>			                         
				                         	<a href="/herramienta/edit/{{ herramienta.id }}" title="Editar" class="icono_tabla "><i class="fa fa-pencil" aria-hidden="true"></i></a>     
				                         	<a href="/herramienta/delete/{{ herramienta.id }}" title="Eliminar" class="icono_tabla " onclick="if (! confirm('Esta seguro de eliminar a: {{ herramienta.codigo }}')) return false;" ><i class="fa fa-eraser" aria-hidden="true"></i></a>
				                            </center>        				              	               				                            
				                        </td>
			                        </tr>   
			                    {% endfor %}           
		                        </tbody>
                      		</table>
                      	{% else %}
							<p> No hay herramientas registrados aún </p>
						{% endif %}
                    	</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
              <!-- /.container-fluid -->
</div>
            <!-- /.content-wrapper -->
            <!--fin Contenido-->

   
{% endblock %}
{% block javascripts %}

{% endblock %}