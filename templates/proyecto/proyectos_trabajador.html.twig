{% extends 'base_empleado.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

<!--DIV CONTENDO-->
        
<div id="content-wrapper">
    <div class="container-fluid">
		<!-- contenido -->
        <div id="content-wrapper">
			<div class="container-fluid">
                <ol class="breadcrumb">
                 	<li class="breadcrumb-item">
                    	<a href="#"></a>
                 	</li>
                 	<li class="breadcrumb-item active">
                 		BC3 - INGENIEROS S.A.
                 	</li>
                </ol>
 				<spam class="titulo">MIS PROYECTOS</spam>
                <hr>

                <!-- DataTables -->
                <div class="card mb-3">
                  	<div class="card-body">
                    	<div class="table-responsive">
                    	{% if proyectos %}
                      		<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
		                        <thead>
		                          <tr class="card-header">
		                            <th>ID</th>
		                            <th>Nombre proyecto</th>
		                            <th>Dirección</th>
		                            <th>Opciones</th>
		                          </tr>
		                        </thead>
		                        <tfoot>
		                          <tr>
		                            <th>ID</th>
		                            <th>Nombre proyecto</th>
		                            <th>Dirección</th>
		                            <th>Opciones</th>
		                          </tr>
		                        </tfoot>
                        		<tbody>    
                        		{% for proyecto in proyectos %}                    
			                        <tr>
			                         	<td>{{ proyecto.idproyecto}}</td>
			                            <td>{{ proyecto.nombreproyecto }} </td>
			                            <td>{{ proyecto.direccionproyecto }}</td>
			                            <td>
			                            	<center>	                  
				                            <a href="/proyecto_user/{{ proyecto.idproyecto}}"  class="icono_tabla " title="Ver" ><i class="fa fa-eye" aria-hidden="true" ></i></a>
				                            <a href="/avance/proyecto/{{ proyecto.idproyecto }}"  class="icono_tabla "  title="Subir Imágenes"><i class="fa fa-upload"></i></a>
				                        </td>
			                        </tr>   
			                    {% endfor %}           
		                        </tbody>
                      		</table>
                      	{% else %}
							<p> No hay proyectos registrados aún </p>
						{% endif %}
                    	</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
              <!-- /.container-fluid -->
</div>
            <!-- /.content-wrapper -->
            <!--fin Contenido-->

   
{% endblock %}