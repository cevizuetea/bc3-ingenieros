{% extends 'base_admin.html.twig' %}

{% block title %}Clientes{% endblock %}

{% block body %}

<!--DIV CONTENDO-->
        
<div id="content-wrapper">
    <div class="container-fluid">
		<!-- contenido -->
        <div id="content-wrapper">
			<div class="container-fluid">
               
                <center>
                <div class="row"
                <div class="container text-center col-lg-6 col-centrada">
					<div class="container-fluid" style="height: 25px">
							 {% for flash_message in app.session.flashbag.get('notice') %}
							 	<div class="alert alert-success" id="mensaje">
									<!--<div class="flash-notice">-->
			        						{{ flash_message }}
			    					<!--</div>-->
			    				</div>
							{% endfor %}						
					</div>
				</div>
				</div>
				</center>

 				<button onclick="location.href='cliente/new'" class=" boton_tabla float-right"><i class="fa fa-plus-circle" aria-hidden="true"></i> &nbsp;Nuevo</button>            
 				<spam class="titulo">NUESTROS CLIENTES</spam>
                <hr> 

                <!-- DataTables -->
                <div class="card mb-3">
                  	<div class="card-body">
                    	<div class="table-responsive">
                    	{% if clientes %}
                      		<table class="table table-bordered" id="datos" width="100%" cellspacing="0">
		                        <thead>
		                          <tr class="card-header">
		                            <th>Id.</th>
		                            <th>Nombre</th>
		                            <th>Dirección</th>
		                            <th>Teléfono</th>
		                            <th>Opciones</th>
		                          </tr>
		                        </thead>
		                        <tfoot>
		                          <tr>
		                            <th>Id.</th>
		                            <th>Nombre</th>
		                            <th>Dirección</th>
		                            <th>Teléfono</th>
		                            <th>Opciones</th>
		                          </tr>
		                        </tfoot>
                        		<tbody>    
                        		{% for cliente in clientes %}                    
			                        <tr>
			                         	<td>{{ cliente.idcliente }}</td>
			                            <td>{{ cliente.nombrecliente }}</td>
			                            <td>{{ cliente.direccion }}</td>
			                            <td>0{{ cliente.telefono }}</td>
			                            <td>
				                            <center>	 
				                            <a href="/cliente/show/{{ cliente.idcliente }}"  title="Ver" class="icono_tabla "  ><i class="fa fa-eye" aria-hidden="true"></i></a>                              
				                            <a href="/cliente/edit/{{ cliente.idcliente }}" title="Editar" class="icono_tabla "  ><i class="fa fa-pencil" aria-hidden="true"></i></a>
				                            <a href="/cliente/delete/{{ cliente.idcliente }}" title="Eliminar" class="icono_tabla "   onclick="if (! confirm('Esta seguro de eliminar a: {{ cliente.nombrecliente }}')) return false;"><i class="fa fa-eraser" aria-hidden="true"></i></a></center>
				                        </td>
			                        </tr>   
			                    {% endfor %}           
		                        </tbody>
                      		</table>
                      	{% else %}
							<p> No hay clientes registrados aun </p>
						{% endif %}
                    	</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
              <!-- /.container-fluid -->
</div>
            <!-- /.content-wrapper -->
            <!--fin Contenido-->


   
{% endblock %}
